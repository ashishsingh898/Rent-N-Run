<head>
                <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
                <link rel="stylesheet" href="~/css/cars.css" />
    </head>
        <style>
            .gg
            {
                width:300px;
                height:400px;
                margin-top:50px;
                margin-bottom:20px;  
                transition: transform 2s;
            }
            .gg:hover 
            {
                transform: scale(1.3);
            }
        </style>
@model List<RentNRunLib.Car>
<div class="row">
    @foreach(var item in Model)
    {
        <div class=" col-md-4">   
            <img src="~/@item.Images" class = "gg" >
            <div>@item.CarId </div> 
            <div style="font-size:30px;"><b>@item.Model</b></div>
            <div style="font-size:20px;">(@item.ModelYear)</div>
            <div style="font-size:20px;">Color: @item.Color</div>
            <div style="font-size:20px;">Seats: @item.NumberOfPersons</div>
            <div style="color:red"><b>Rent: ₹@item.DailyRent/day</b></div>
            @*<button><a asp-action="Booking"  asp-route-myitemid=@item.CarId>Buy Now</a></button>*@
            <a asp-action="Booking"  asp-route-myCarid=@item.CarId asp-route-myitemModel =@item.Model asp-route-myitemModelYear =@item.ModelYear asp-route-myitemColor =@item.Color asp-route-myitemNumberOfPersons =@item.NumberOfPersons asp-route-myitemDailyRent =@item.DailyRent asp-route-myitemimg=@item.Images class="btn btn-info">BookNow</a><br/>
        </div>
    }
    